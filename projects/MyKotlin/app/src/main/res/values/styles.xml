<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="content_background">#e9e9e9</item>
        <item name="content_text_color">#3d3d3d</item>
        <item name="title_text_color">#000000</item>
        <item name="menu_background">#999999</item>
        <item name="menu_text_color">#050505</item>

    </style>

    <style name="AppTheme.Night" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="content_background">#131313</item>
        <item name="content_text_color">#848484</item>
        <item name="title_text_color">#d1d1d1</item>
        <item name="menu_background">#202020</item>
        <item name="menu_text_color">#464646</item>

    </style>

</resources>
